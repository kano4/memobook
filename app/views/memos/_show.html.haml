.memo
  .viewer
    %span.body #{memo.body}
    = button_tag 'Edit', class: 'edit', type: :button
  .editor
    %div
      = button_tag 'Cancel', class: 'cancel', type: :button
    = render 'form', memo: memo, submit_text: 'Update'
    = form_for memo, method: :delete, remote: true, html: { id: nil, class: 'delete_memo' } do |f|
      = f.submit 'Destroy'
